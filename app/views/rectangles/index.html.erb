<p id="notice"><%= notice %></p>

<h1>Listing Rectangles</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Latitude0</th>
      <th>Longitude0</th>
      <th>Latitude1</th>
      <th>Longitude1</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @rectangles.each do |rectangle| %>
      <tr>
        <td><%= rectangle.name %></td>
        <td><%= rectangle.latitude0 %></td>
        <td><%= rectangle.longitude0 %></td>
        <td><%= rectangle.latitude1 %></td>
        <td><%= rectangle.longitude1 %></td>
        <td><%= link_to 'Show', rectangle %></td>
        <td><%= link_to 'Edit', edit_rectangle_path(rectangle) %></td>
        <td><%= link_to 'Destroy', rectangle, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

